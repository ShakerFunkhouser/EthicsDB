<h1>Create a new Ethical Argument</h1>
<form action='/ethical_arguments/authored' method="post">
  <label for="title">Title:</label>
  <input type="text" id="title" name="ethical_argument[title]"><br>

  <label for="topic">Topic:</label>
  <input type="text" id="topic" name="ethical_argument[topic]"><br>

  <label for="summary">Summary:</label>
  <input type="text" id="summary" name="ethical_argument[summary]"><br>

  <!-- Concerned Party 1 -->
  <h3>Create Concerned Party 1:</h3>
  <label for="concerned_party_1_identifier">Identifier:</label>
  <input type="text" id="concerned_party_1_identifier" name="concerned_parties[][identifier]"><br>

  <label for="circumstance_1_context">Circumstance:</label>
  <input type="text" id="circumstance_1_context" name="circumstances[][context]"><br>

  <!-- Concerned Party 1: Imperative Ranking -->
  <h4>Create Imperative Ranking for Party 1:</h4>
  <label for="imperative_ranking_1_characteristic">Characteristic:</label>
  <input type="text" id="imperative_ranking_1_characteristic" name="imperative_rankings[][characteristic]"><br>

  <label for="imperative_ranking_1_operation">Operation:</label>
  <input type="text" id="imperative_ranking_1_operation" name="imperative_rankings[][operation]"><br>

  <label for="imperative_ranking_1_importance_ranking">Importance Ranking:</label><br>
  <input type="number" id="imperative_ranking_1_importance_ranking" name="imperative_rankings[][importance_ranking]" min="1" max="2"><br>

  <!-- Concerned Party 2 -->
  <h3>Create Concerned Party 2:</h3>
  <label for="concerned_party_2_identifier">Identifier:</label>
  <input type="text" id="concerned_party_2_identifier" name="concerned_parties[][identifier]"><br>

  <label for="circumstance_2_context">Circumstance:</label>
  <input type="text" id="circumstance_2_context" name="circumstances[][context]"><br>

  <!-- Concerned Party 2: Imperative Ranking -->
  <h4>Create Imperative Ranking for Party 2:</h4>
  <label for="imperative_ranking_2_characteristic">Characteristic:</label>
  <input type="text" id="imperative_ranking_2_characteristic" name="imperative_rankings[][characteristic]"><br>

  <label for="imperative_ranking_2_operation">Operation:</label>
  <input type="text" id="imperative_ranking_2_operation" name="imperative_rankings[][operation]"><br>

  <label for="imperative_ranking_2_importance_ranking">Importance Ranking:</label><br>
  <input type="number" id="imperative_ranking_2_importance_ranking" name="imperative_rankings[][importance_ranking]" min="1" max="2"><br>

  <!-- Possible Action 1 -->
  <h3>Possible Action 1:</h3>
  <label for="possible_action_1_description">Description:</label>
  <input type="text" id="concerned_party_1_description" name="possible_actions[][description]"><br>

  <!-- Possible Action 1: Effect Likelihood -->
  <h4>Effect Likelihood:</h4><br>
  <label for="affected_party_1">Affected Party:</label>
  <label for="effect_likelihood_1_affected_party_1">1</label>
  <input type="radio" id="effect_likelihood_1_affected_party_1" name="effect_likelihood_1_affected_party" value="1"><br>
  <label for="effect_likelihood_1_affected_party_2">2</label>
  <input type="radio" id="effect_likelihood_1_affected_party_2" name="effect_likelihood_1_affected_party" value="2"><br>

  <label for="effect_likelihood_1_characteristic">characteristic:</label>
  <input type="text" id="effect_likelihood_1_characteristic" name="effect_likelihoods[][characteristic]"><br>

  <label for="effect_likelihood_1_operation">Operation:</label>
  <input type="text" id="effect_likelihood_1_operation" name="effect_likelihoods[][operation]"><br>

  <label for="effect_likelihood_1_likelihood">Likelihood:</label>
  <input type="text" id="effect_likelihood_1_likelihood" name="effect_likelihoods[][likelihood]"><br>

  <!-- Possible Action 2 -->
  <h3>Possible Action 2:</h3>
  <label for="possible_action_2_description">Description:</label>
  <input type="text" id="concerned_party_2_description" name="possible_actions[][description]"><br>

  <!-- Possible Action 2: Effect Likelihood -->
  <h4>Effect Likelihood:</h4>
  <label for="affected_party_2">Affected Party:</label>
  <input type="radio" id="effect_likelihood_2_affected_party_1" name="effect_likelihood_2_affected_party" value="1"><br>
  <input type="radio" id="effect_likelihood_2_affected_party_2" name="effect_likelihood_2_affected_party" value="2"><br>

  <label for="effect_likelihood_2_characteristic">characteristic:</label>
  <input type="text" id="effect_likelihood_2_characteristic" name="effect_likelihoods[][characteristic]"><br>

  <label for="effect_likelihood_2_operation">Operation:</label>
  <input type="text" id="effect_likelihood_2_operation" name="effect_likelihoods[][operation]"><br>

  <label for="effect_likelihood_2_likelihood">Likelihood:</label>
  <input type="text" id="effect_likelihood_2_likelihood" name="effect_likelihoods[][likelihood]"><br>

  <input type="submit" id="submit" name="submit" value="submit">
</form>
